@using Entity_Layer
@model Entity_Layer.Student;

<html>
    <head>

        <title> Result Sheet </title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj" crossorigin="anonymous"></script>
        </head>

    <body>
        <style>
            * {
                font-size:20px;
                letter-spacing: 1.8px;
                line-height: 24px;
            }
            h1 {
                font-size: 30px;
            }
            .container {
                padding: 30px;
            }
            .row {
                display: flex;
            }
            p {
                display: inline;
            }
            .col-5 {
                font-weight: 600;
            }
            table {
                width: 100%;
            }
        </style>

        <div class="container">
            <div style="height: 60px;"></div>
            <h1 style="display: inline-block;" display="4"> Rajshahi University of Engineering and Technology </h1>
            <img class="img img-rounded" style="width: 90px; position: absolute; right: 0" src="https://upload.wikimedia.org/wikipedia/en/thumb/8/87/RUET_logo.svg/1200px-RUET_logo.svg.png" alt="ruet-logo.png">
            <div style="height: 40px;"></div>
            <div class="row">
                <p class="col-5">
                    Student Reg. No.
                </p>
                <p class="col-7">
                    : @Model.RegistrationNumber
                </p>
            </div>

            <div class="row">
                <p class="col-5">
                    Name
                </p>
                <p class="col-7">
                    : @Model.Name
                </p>
            </div>

            <div class="row">
                <p class="col-5">
                    Email
                </p>
                <p class="col-7">
                    : @Model.Email
                </p>
            </div>

            <div class="row">
                <p class="col-5">
                    Department
                </p>
                <p class="col-7">
                    : @Model.Department.Name
                </p>
            </div>
        </div>

        <h4 style="margin: 30px 0 20px"> Your course wise results are:- </h4>

        <table>
            <thead>
                <td> Code </td>
                <td> Course Name </td>
                <td> Grade </td>
            </thead>
            <tbody>
                @for(int i=0; i<@Model.StudentsCourses.Count; i++)
                {
                <tr>
                    <td> @Model.StudentsCourses[i].CourseCode </td>
                    <td> @Model.StudentsCourses[i].Course.Name </td>
                    <td> @Model.StudentsCourses[i].Grade </td>
                </tr>
                }
            </tbody>
        </table>

    </body>
</html>